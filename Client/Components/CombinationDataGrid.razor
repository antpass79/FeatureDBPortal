@inherits CombinationDataGridDataModel

<style>
    .spinner-container {
        display: flex;
        position: absolute;
        z-index: 999;
        width: 100%;
        height: 100%;
        background: lightgray;
        opacity: 0.3;
        align-items: center;
    }

    tr:nth-child(even) {
        background-color: lightgray;
    }

    .table td, .table th {
        padding: .35rem;
    }

    th.rotate {
        height: 140px;
        min-width: 50px;
        white-space: nowrap;
    }

        th.rotate > div {
            transform: translate(0px, 0px) rotate(315deg);
            width: 0px;
        }

            th.rotate > div > span {
                padding: 5px 10px;
            }

    .combination-matrix {
        overflow: auto;
        height: 100%;
    }
</style>

<div class="combination-matrix">
    @if (Combination == null)
    {
        <p class="logo-text"><em>No Available Combinations</em></p>
    }
    else
    {
        <MatTable Items="@Combination.Rows" class="table mat-elevation-z5" ShowPaging="true" PageSize="10">
            <MatTableHeader>
                @foreach (var column in Combination.Columns.Values)
                {
                    <th class="rotate">
                        <div><span>@column.Name</span></div>
                    </th>
                }
            </MatTableHeader>
            <MatTableRow>
                <td>@context.Value.Title.Name</td>
                @foreach (var cell in @context.Value.Cells.Values)
                    {
                        if (cell.Items == null)
                        {
                        <td>@cell.AllowMode</td>
                        }
                        else
                        {
                        <td>
                            @foreach (var item in cell.Items)
                                {
                                <span>@item.Name</span>
                                }
                        </td>
                        }
                    }
            </MatTableRow>
        </MatTable>
    }
</div>
