@inherits CombinationMatrixDataModel

<style>
    .spinner-container {
        display: flex;
        position: absolute;
        z-index: 999;
        width: 100%;
        height: 100%;
        background: lightgray;
        opacity: 0.3;
        align-items: center;
    }

    tr:nth-child(even) {
        background-color: lightgray;
    }

    .table td, .table th {
        padding: .35rem;
    }

    th.rotate {
        height: 140px;
        white-space: nowrap;
    }

        th.rotate > div {
            transform: translate(0px, 0px) rotate(315deg);
            width: 0px;
        }

            th.rotate > div > span {
                padding: 5px 10px;
            }

    .combination-matrix {
    }
</style>

<div class="combination-matrix">
    @if (Combination == null)
    {
        <p class="logo-text"><em>No Available Combinations</em></p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    @foreach (var header in Combination.Headers)
                    {
                        <th class="rotate">
                            <div><span>@header.Name</span></div>
                        </th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Combination.Rows)
                {
                    <tr>
                        <td>@row.TitleCell.Name</td>
                        @foreach (var cell in row.Cells)
                        {
                            <td>@cell.Allow</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
