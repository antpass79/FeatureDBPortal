@inherits CombinationMatrixDataModel

<style>
    .spinner-container {
        display: flex;
        position: absolute;
        z-index: 999;
        width: 100%;
        height: 100%;
        background: lightgray;
        opacity: 0.3;
        align-items: center;
    }

    tr:nth-child(even) {
        background-color: lightgray;
    }

    .table {
        height: 100%;
    }
    .table td, .table th {
        padding: .35rem;
    }

    th.rotate {
        height: 140px;
        min-width: 50px;
        white-space: nowrap;
    }

        th.rotate > div {
            transform: translate(0px, 0px) rotate(315deg);
            width: 0px;
        }

            th.rotate > div > span {
                padding: 5px 10px;
            }

    td.row-title {
        font-weight: bold;
        vertical-align: middle;
    }

    .combination-matrix {
        overflow: auto;
        height: 100%;
    }
</style>

<div class="combination-matrix">
    @if (Combination == null)
    {
        <p class="logo-text"><em>No Available Combinations</em></p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    @foreach (var header in Combination.Headers)
                    {
                        <th class="rotate">
                            <div><span>@header.Name</span></div>
                        </th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Combination.Rows)
                {
                <tr>
                    <td class="row-title">
                        @row.TitleCell.Name
                    </td>
                    @foreach (var cell in row.Cells)
                    {
                        //if (cell.Items == null)
                        if (string.IsNullOrWhiteSpace(cell.AggregateItems))
                        {
                            <td>@cell.Allow</td>
                        }
                        else
                        {
                            <td>@cell.AggregateItems</td>
                            @*<td>
                                @foreach (var item in cell.Items)
                                {
                                    <span>@item.Name</span>
                                }
                            </td>*@
                        }
                    }
                </tr>
                }
            </tbody>
        </table>
    }
</div>
